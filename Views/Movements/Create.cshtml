@model Traders.Models.MovementsViewModel

@{
    ViewData["Title"] = "Crear nuevo movimiento";
}


<div class="card">
    <div class="card-header">
        <h4>Crear Movimiento</h4>
    </div>
    <hr />
    <form method="post">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserGuid" class="control-label"></label>
                <input asp-for="UserGuid" id="UserGuid" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="AmountIn" class="control-label"></label>
                <input asp-for="AmountIn" id="AmmountIn" class="form-control" />
                <span asp-validation-for="AmountIn" id="AmmountInVal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BadgeGuidIn" class="control-label"></label>
                <select asp-for="BadgeGuidIn" id="BadgesIn"
                        class="form-control BadgeGuidIn"
                        asp-items="@(new SelectList(ViewBag.BadgesIn, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="BankAccountGuidIn" class="control-label"></label>
                <select asp-for="BankAccountGuidIn" id="BankAccountIn"
                        class="form-control BankAccountIn"
                        asp-items="@(new SelectList(ViewBag.BankAccountIn, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="AmountOut" class="control-label"></label>
                <input asp-for="AmountOut" id="AmountOut" class="form-control" />
                <span asp-validation-for="AmountOut" id="AmmountOutVal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BadgeGuidOut" class="control-label"></label>
                <select asp-for="BadgeGuidOut" id="BadgesOut"
                        class="form-control BadgeGuidOut"
                        asp-items="@(new SelectList(ViewBag.BadgesOut, "Id", "Name"))"></select>
                <span asp-validation-for="BadgeGuidOut" id="BadgesGuidOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccountGuidOut" class="control-label"></label>
                <select asp-for="BankAccountGuidOut" id="BankAccountOut"
                        class="form-control BankAccountOut"
                        asp-items="@(new SelectList(ViewBag.BankAccountOut, "Id", "Name"))"></select>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="AmountInS" class="control-label"></label>
                <input asp-for="AmountInS" id="AmmountInS" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BadgeGuidInS" class="control-label"></label>
                <select asp-for="BadgeGuidInS" id="BadgesInS"
                        class="form-control BadgeGuidIn"
                        asp-items="@(new SelectList(ViewBag.BadgesIn, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="BankAccountGuidInS" class="control-label"></label>
                <select asp-for="BankAccountGuidInS" id="BankAccountInS"
                        class="form-control BankAccountIn"
                        asp-items="@(new SelectList(ViewBag.BankAccountIn, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="AmountOutS" class="control-label"></label>
                <input asp-for="AmountOutS" id="AmountOutS" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BadgeGuidOutS" class="control-label"></label>
                <select asp-for="BadgeGuidOutS" id="BadgesOutS"
                        class="form-control BadgeGuidOut"
                        asp-items="@(new SelectList(ViewBag.BadgesOut, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="BankAccountGuidOutS" class="control-label"></label>
                <select asp-for="BankAccountGuidOutS" id="BankAccountOutS"
                        class="form-control BankAccountOutS"
                        asp-items="@(new SelectList(ViewBag.BankAccountOut, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Comission" class="control-label"></label>
                <input asp-for="Comission" id="Comission" class="form-control" /><label>USD</label>
                <span asp-validation-for="Comission" id="ComissionVal" class="text-danger"></span>
            </div>
            <div class="card-footer">
                <button id="btnCreateMov" class="btn btn-primary" onclick="Create('@Url.Action("Create", "Movements")')">Crear</button>
                <a asp-action="Index" cclass="btn btn-outline-warning">Cancelar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/movements.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
