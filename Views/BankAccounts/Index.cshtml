@model IEnumerable<Traders.Models.BankAccountsViewModel>

@{
    ViewData["Title"] = "Balances";
}

<h1>Balances</h1>

<p>
    <a asp-action="Create">Agregar Cuenta Balances</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
        </tr>
    </thead>
    <tbody>
        <partial name="_AccountsPartial" model="@Model.ToList()" />
    </tbody>
</table>
