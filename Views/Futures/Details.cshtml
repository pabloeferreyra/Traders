@model Traders.Models.FuturesViewModel 
@{
    if (ViewBag.Date == null)
        ViewBag.Date = String.Format("{0:yyyy-MM-dd}", DateTime.Now);
    else
        String.Format("{0:yyyy-MM-dd}", DateTime.Now);
}
@{
    ViewData["Title"] = "Detalles Contrato " + Model.Id;
}



<div class="card">
    <div class="card-header">
        @ViewData["Title"]
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-3">
                @Html.DisplayNameFor(model => model.ContractNumber)
            </dt>
            <dd class="col-9">
                @Html.DisplayFor(model => model.ContractNumber)
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd class="col-4">
                @Html.DisplayFor(model => model.StartDate)
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.FinishDate)
            </dt>
            <dd class="col-4">
                @Html.DisplayFor(model => model.FinishDate)
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Term)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.Term) Meses
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.StartCurrency)
            </dt>
            <dd class="col-4">
                @Html.DisplayFor(model => model.StartCurrency)
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.RetireCurrency)
            </dt>
            <dd class="col-4">
                @Html.DisplayFor(model => model.RetireCurrency)
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Client.Email)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.Client.Email)
            </dd>
            @if (Model.Participation != null)
            {
                <dt class="col-2">
                    @Html.DisplayNameFor(model => model.Participation)
                </dt>
                <dd class="col-10">
                    @Html.DisplayFor(model => model.Participation.Percentage)
                </dd>
            }
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Capital)
            </dt>
            <dd class="col-4">
                @Html.DisplayFor(model => model.Capital)
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.FinalResult)
            </dt>
            <dd class="col-4">
                @Html.DisplayFor(model => model.FinalResult)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-outline-warning">Volver</a>
    </div>
</div>
@if (!Model.FixRent) { 
    <div class="card">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FuturesUpdates.FirstOrDefault().ModifDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FuturesUpdates.FirstOrDefault().Gain)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FuturesUpdates.FirstOrDefault().GainFinal)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <partial name="_FuturesUpdatesPartial" model="@Model.FuturesUpdates.ToList()" />
                </tbody>
            </table>
        </div>
    </div>
}
