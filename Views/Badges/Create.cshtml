@model Traders.Models.BadgesViewModel

@{
    ViewData["Title"] = "Crear Divisa";
}

<div class="card">
    <div class="card-header">
        <h4>Crear</h4>
    </div>
    <hr />
    <form method="post">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" id="badgeName" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="card-footer">
                <button id="btnCreateBadge" class="btn btn-primary" onclick="Create('@Url.Action("Create", "Badges")')">Crear</button>
                <a asp-action="Index" cclass="btn btn-outline-warning">Cancelar</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <script src="~/js/badges.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
